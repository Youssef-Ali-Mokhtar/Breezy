
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_image_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@drawable/newyork"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/news_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="This is a title"
                android:textSize="18sp"
                android:textColor="#000000"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/news_image_id"/>

            <TextView
                android:id="@+id/news_time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Time"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/news_title_id"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/bookmark_sign_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bookmarked"
                android:textColor="#D50000"
                android:textStyle="bold"
                android:visibility="invisible"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/news_title_id"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
