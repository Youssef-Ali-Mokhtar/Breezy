<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.details.HomeDetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_details_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is a title"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_details_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/newyork"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/title_details_id" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/small_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/image_details_id">
            <TextView
                android:id="@+id/published_at_time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="time"
                android:textSize="12sp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/small_details"/>

        <TextView
            android:id="@+id/description_details_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="This is the content"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/small_details"/>


        <TextView
            android:id="@+id/url_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link to the source"
            android:textSize="12sp"
            android:textColor="#0000EE"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/description_details_id"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>